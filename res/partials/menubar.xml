<MenuBar>
	<Menu name="Calculator">
		<Menu name="About Calculator" hotkey="meta+a"/>
		<Menu type="divider"/>
		<Menu name="Preferences" hotkey="shift+," click="preferences"/>
		<Menu type="divider"/>
		<Menu name="Services">
			<Menu name="Open"/>
			<Menu name="Close"/>
		</Menu>
		<Menu type="divider"/>
		<Menu name="Hide Calculator"/>
		<Menu name="Hide Others"/>
		<Menu name="Show All" disabled="1"/>
		<Menu type="divider"/>
		<Menu name="Quit Calculator" shell="win -c"/>
	</Menu>
	<Menu name="View">
		<Menu name="Basic" click="view-basic" check-group="view-option" is-checked="1"/>
		<Menu name="Scientific" click="view-scientific" check-group="view-option"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Send Calculator Feedback"/>
		<Menu type="divider"/>
		<Menu name="Calculator Help"/>
		<Menu type="divider"/>
		<Menu name="License"/>
	</Menu>
</MenuBar>